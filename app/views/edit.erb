<form action="/articles/<%= @article.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label for="title">Article Title:</label><br>
  <input type="text" id="title" name="article[title]" value="<%= @article.title %>"><br>
  <label for="content">Article Content:</label><br>
  <textarea id ="content" name="article[content]" value="<%= @article.content %>">
  </textarea></br>
  <input type="submit">
</form>
